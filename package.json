{
  "name": "Eloqua",
  "version": "1.0.0",
  "description": "AI-powered debate coaching application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "swyxm"
  },
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "electron-is-dev": "^2.0.0",
    "lucide-vue-next": "^0.515.0",
    "vue": "^3.3.4",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-vue": "^4.6.2",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^4.4.9"
  },
  "build": {
    "appId": "com.eloqua.app",
    "productName": "Eloqua",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "src/main/python",
        "to": "python"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
